{
  "compilerOptions": {
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "types": [
    "node"
  ],
  "include": [
    "types/**/*.d.ts",
    "src/**/*.ts",
    "package/vue-tms/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
  ]
}